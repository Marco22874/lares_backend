{
  "name": "lares-backend",
  "version": "1.1.0",
  "description": "Lares Cohousing - Directus CMS Backend",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "seed": "node scripts/seed.js",
    "backup": "bash scripts/backup.sh",
    "healthcheck": "bash scripts/healthcheck.sh",
    "snapshot:create": "npx directus schema snapshot ./directus/snapshots/snapshot.yaml",
    "snapshot:apply": "npx directus schema apply ./directus/snapshots/snapshot.yaml"
  },
  "devDependencies": {
    "vitest": "^3.0.0"
  }
}
