# Lares Cohousing Backend - Environment Variables
# Copy to .env and fill in values
#
# SECURITY: Never commit the .env file to git!

# ============================================
# Database
# ============================================
DB_USER=directus
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_DATABASE=lares

# ============================================
# Directus
# ============================================
DIRECTUS_PORT=8055
DIRECTUS_SECRET=CHANGE_ME_RANDOM_SECRET_MIN_32_CHARS

# Admin credentials (first-time setup only)
ADMIN_EMAIL=admin@larescohousing.it
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# CORS & URLs
# ============================================
# Production: https://larescohousing.it
CORS_ORIGIN=http://localhost:4321
FRONTEND_URL=http://localhost:4321
PUBLIC_URL=http://localhost:8055

# ============================================
# Branding
# ============================================
PROJECT_COLOR=#2d5016
PROJECT_LOGO=
PROJECT_BACKGROUND=

# ============================================
# Email (for contact form notifications)
# ============================================
EMAIL_TRANSPORT=smtp
EMAIL_FROM=noreply@larescohousing.it
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_SMTP_SECURE=false

# ============================================
# Vercel Webhook (rebuild on content change)
# ============================================
VERCEL_DEPLOY_HOOK_URL=
